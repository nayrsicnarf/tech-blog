<div class='container-fluid'>
  <div class='row justify-content-center'>
    <div class='col-md-5 gx-4 mb-4'>
      <section class='log-in-form'>

        <h2>Log In</h2>

          <form class='loginForm'>

            <div class='form-group'>
              <label for='username'>Username</label>
              <input type='text' class='form-control' id='username-login' placeholder='Username'>
            </div>

            <div class='form-group'>
              <label for='password'>Password</label>
              <input type='password' class='form-control' id='password-login' placeholder='Password'>
            </div>

            <div class='btn-group'>
              <button class='btn btn-primary' id='btn-login' type='submit'>Log In</button>
              <div><a class='btn my-2' id='btn-signup' href='/signup' rel='noreferrer noopener'><span>Dont have an account? >>> <strong>Click Here to Sign Up</strong></span></a></div>
            </div>

          </form>
        </section>
      </div>
  </div>
</div>

<script src='/js/login.js'></script>