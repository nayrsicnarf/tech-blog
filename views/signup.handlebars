<div class='container-fluid'>
  <div class='row'>

    <div class='col-md-5 gx-4 mb-4'>
      <section class='welcome'>
        <h2><strong>Welcome to Tech Blog</strong></h2>
          <p>Join the community of tech bloggers to:</p>
              <ul>
                  <li>Upload articles</li>
                  <li>Comment on articles</li>
              </ul>
          <p>Sign up for an account today!</p>
      </section>
    </div>

    <div class='col-md-5 gx-4 mb-4'>
      <section class='sign-up-form'>

        <h2>Sign Up</h2>

          <form class='signupForm'>

            <div class='form-group'>
              <label for='username'>Username</label>
              <input type='text' class='form-control' id='username-signup' placeholder='Username'>
              <small id='usernameHelp' class='form-text text-muted'>Username should be between 5 and 24 characters.</small>
            </div>

            <div class='form-group'>
              <label for='password'>Password</label>
              <input type='password' class='form-control' id='password-signup' placeholder='Enter Password'>
              <small id='passwordHelp' class='form-text text-muted'>Password should be a minimum of 8 characters.</small>
            </div>

            <div class='btn-group'>
              <button class='btn btn-primary' id='btn-signup' type='submit'>Sign Up</button>
              <div><a class='btn my-2' id='btn-login' href='/login' rel='noreferrer noopener'><span>Already have an account? <strong>Log In</strong></span></a></div>
            </div>

          </form>
      </section>
    </div>

  </div>
</div>

<script src='/js/signup.js'></script>